# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# For Docker: postgresql://DB_USER:DATABASE_PASSWORD@db:5432/polaris
# For local dev: postgresql://DB_USER:DATABASE_PASSWORD@localhost:5432/polaris
DATABASE_URL=postgresql://postgres:your_password@db:5432/polaris

# Database credentials
DATABASE_PASSWORD=your_secure_password_here
DB_USER=postgres

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl

# Your application URL (must match NEXT_PUBLIC_APP_URL)
# Production: https://yourdomain.com
# Development: http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# ============================================
# PAYSTACK PAYMENT GATEWAY
# ============================================
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# ============================================
# APPLICATION SETTINGS
# ============================================
# Public URL of your application
# Production: https://yourdomain.com
# Development: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# EMAIL SERVICE (Choose one)
# ============================================
# Resend (Recommended)
RESEND_API_KEY=re_your_resend_api_key


# ============================================
# FILE STORAGE - MinIO (S3-Compatible)
# ============================================
# MinIO root credentials (admin user)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# MinIO connection settings
# For Docker: use service name 'minio'
# For local dev outside Docker: use 'localhost'
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioaccesskey 

# MinIO bucket name for storing files
MINIO_BUCKET_NAME=polaris-uploads

# MinIO Console UI redirect URL (optional)
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# ============================================
# LOGGING & MONITORING (Optional but recommended)
# ============================================
# Sentry for error tracking
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# LogRocket for session replay
# LOGROCKET_APP_ID=your_app_id

# ============================================
# RATE LIMITING & SECURITY
# ============================================
# Rate limit per IP (requests per minute)
RATE_LIMIT_MAX=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# DEPLOYMENT (GitHub Actions Secrets)
# ============================================
# These should be set in GitHub repository secrets, not in .env
# SERVER_HOST=your_server_ip_or_domain
# SERVER_USERNAME=your_ssh_username
# SERVER_PORT=22
# SSH_PRIVATE_KEY=your_ssh_private_key
# DEPLOY_PATH=~/polaris
# DOCKERHUB_USERNAME=your_dockerhub_username (optional)
# DOCKERHUB_TOKEN=your_dockerhub_token (optional)